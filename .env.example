# Core app config
SECRET_KEY=change_me_to_a_random_64_char_hex
FLASK_DEBUG=true
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# URL scheme and proxy (enable when behind a reverse proxy)
PREFERRED_URL_SCHEME=http
FORCE_HTTPS=false
TRUST_PROXY=false
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAMESITE=Lax

# Database (SQLite path). Keep as a filename for local use
DATABASE_URL=time_capsule.db

# Rate limiting storage (optional: e.g., redis://localhost:6379)
RATELIMIT_STORAGE_URI=

# Background task webhook token for /tasks/send_reminders
TASK_TOKEN=

# SMTP for emails (optional)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
SMTP_USE_TLS=true

# Enable/disable APScheduler inside WSGI (set false on hosts that fork multiple workers)
ENABLE_SCHEDULER=true
